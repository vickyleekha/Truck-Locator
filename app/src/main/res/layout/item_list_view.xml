<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/truckNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="hello"
        android:textColor="@color/black"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/truckNumber"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_menu"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/truckStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/truckNumber"
        android:text="hello"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/daysCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintTop_toTopOf="parent"
        android:text="hello"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="hello"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/truckSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintEnd_toStartOf="@id/speedMeasure"
        app:layout_constraintTop_toBottomOf="@id/daysCount"
        android:text="hello"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/speedMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:text="k/h"
        android:textColor="@color/black"/>


"

</androidx.constraintlayout.widget.ConstraintLayout>